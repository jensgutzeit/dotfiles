# Load Lua functions
alignment top_left
minimum_size 450 500
background no
use_xft yes
update_interval 1.0
total_run_times 0
double_buffer yes
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders yes
default_color 808080
default_shade_color 101319
default_outline_color green
no_buffers yes
uppercase no
cpu_avg_samples 2
override_utf8_locale yes
color1 ce2c51 # reddish
color2 ffffff # white
color3 888888 # gray
color4 666666 # dark gray

TEXT
${color4}${font DejaVu Sans Condensed:size=8}uptime ${uptime}${alignr}${exec uname -nsr}
${color3}${font DejaVu Sans Condensed:size=64}${time %H:%M}
${voffset -138}${goto 280}${font DejaVu Sans Condensed:size=24}${color1}${time %d} ${color2}${time %B}
${goto 280}${time %A}
# network traffic
${font DejaVu Sans Condensed:size=8}${color1}net ${hr}
${goto 50}${color2}${downspeedgraph enp2s0 32}
${goto 50}${color2}inbound  ${alignr}${downspeedf enp2s0} kb/s
${goto 50}${color3}${upspeedgraph enp2s0 32}
${goto 50}${color3}outbound ${alignr}${upspeedf enp2s0} kb/s
# CPU
${font DejaVu Sans Condensed:size=8}${color1}cpu ${hr}
${goto 50}${color2}${cpugraph cpu0 32}
${goto 50}${color2}core 1${alignr}${cpu cpu1} %
${goto 50}${color2}${alignr}${exec sensors | grep "Core 0" | cut --bytes=16-17} °C
${goto 50}${color2}${cpugraph cpu1 32}
${goto 50}${color2}core 2${alignr}${cpu cpu2} %
${goto 50}${color2}${alignr}${exec sensors | grep "Core 1" | cut --bytes=16-17} °C
# disks /dev/sda
${font DejaVu Sans Condensed:size=8}${color1}sda ${hr}
${goto 50}${color2}${diskiograph_read /dev/sda 32}
${goto 50}${color2}read${alignr}${diskio_read /dev/sda}
${goto 50}${color2}${diskiograph_write /dev/sda 32}
${goto 50}${color2}write${alignr}${diskio_write /dev/sda}
# disks /dev/sdb
${font DejaVu Sans Condensed:size=8}${color1}sdb ${hr}
${goto 50}${color2}${diskiograph_read /dev/sdb 32}
${goto 50}${color2}read${alignr}${diskio_read /dev/sdb}
${goto 50}${color2}${diskiograph_write /dev/sdb 32}
${goto 50}${color2}write${alignr}${diskio_write /dev/sdb}
# disks /dev/sdc
${font DejaVu Sans Condensed:size=8}${color1}sdc ${hr}
${goto 50}${color2}${diskiograph_read /dev/sdc 32}
${goto 50}${color2}read${alignr}${diskio_read /dev/sdc}
${goto 50}${color2}${diskiograph_write /dev/sdc 32}
${goto 50}${color2}write${alignr}${diskio_write /dev/sdc}
